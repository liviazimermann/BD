<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Produtos</h1>
  <%= link_to "Adicionar Produto", new_produto_path, class: "btn btn-success" %>
</div>

<% if notice %>
  <div class="notice">
    <%= notice %>
  </div>
<% end %>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço Unitário</th>
            <th class="text-end">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @produtos.each do |produto| %>
            <tr>
              <td><%= produto.id %></td>
              <td><%= produto.nome %></td>
              <td>R$ <%= number_with_precision(produto.preco_unitario, precision: 2) %></td>
              <td class="text-end">
                <%= link_to "Ver", produto, class: "btn btn-info btn-sm" %>
                <%= link_to "Editar", edit_produto_path(produto), class: "btn btn-warning btn-sm" %>
                <%= button_to "Excluir", produto, method: :delete, class: "btn btn-danger btn-sm", form: { style: 'display: inline-block' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
